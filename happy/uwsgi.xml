<uwsgi>
  <socket>127.0.0.1:53001</socket>
  <listen>2</listen>
  <master>true</master>
  <pidfile>/opt/sites/first/happy/logs/uwsgi.pid</pidfile>
  <processes>2</processes>
  <pythonpath>/opt/sites/first/happy</pythonpath>
  <pythonpath>/opt/sites/first/happy/apps/</pythonpath>
  <module>application</module>
  <profiler>true</profiler>
  <memory-report>true</memory-report>
  <enable-threads>true</enable-threads>
  <logdate>true</logdate>
  <limit-as>512</limit-as>
  <daemonize>/opt/sites/first/happy/logs/rekoo.log</daemonize>
</uwsgi>
